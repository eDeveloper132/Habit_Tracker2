{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    // Allow importing .ts extensions for Vercel build
    "allowImportingTsExtensions": true,
    "noEmit": true,  // Don't emit files during type checking

    // Other settings
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": ["api/**/*.ts", "models/**/*.ts", "services/**/*.ts", "db/**/*.ts"],
  "exclude": ["node_modules"]
}
